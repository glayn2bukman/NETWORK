<?xml version='1.0' encoding='utf-8'?>

<widget id="org.henry.register" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Unik APP</name>
    <description>second app</description>

    <author email="jacob2016henry@gmail.com" href="http://www.sample.web">Jacob Henry</author>
    <content src="index.html" />
    
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14"/>
    
    <!-- use latest version of phonegap...this version is displayed in the phonegap web -->
    <!-- <preference name="phonegap-version" value="cli-6.5.0" /> -->

    <allow-navigation href="*" />
    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />


    <!--<platform name="android">
      <icon src="img/icon.png" width="32" height="32" />
    </platform> -->
    
    <icon src="icon.png" gap:role="default" />

    <plugin name="cordova-plugin-whitelist" />

 <!-- CHECK NETWORK CONNECTION -->
<feature name="NetworkStatus">
    <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
</feature>
    
    <plugin name="cordova-plugin-network-information" />

<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
<platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>


