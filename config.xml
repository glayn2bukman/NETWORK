<?xml version='1.0' encoding='utf-8'?>

<widget id="org.henry.register" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">

    <name>INTER-NET</name>
    <description>Network Testing </description>

    <author email="jacob2016henry@gmail.com" href="http://www.sample.web">Jacob Henry</author>
    <content src="index.html" />
    
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14"/>
    <preference name="LoadingDialog" value="App Loading, Please wait..." />
	<preference name="ErrorUrl" value="ErrorPage.html"/>
    
    <!-- use latest version of phonegap...this version is displayed in the phonegap web -->
    <preference name="phonegap-version" value="cli-6.5.0" /> 

    <allow-navigation href="*" />

    <!-- This url is allowed to open -->
    <allow-intent href="http://10.42.0.1:44444/*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />

    <!-- =========================================== -->

        <!-- Allow images, xhrs, etc. to google.com -->
        <access origin="http://10.42.0.1:44444" />
        <access origin="https://10.42.0.1:44444" />
        <access origin="https://www.facebook.com/" />

        <!-- Access to the subdomain maps.google.com -->
        <!-- <access origin="http://maps.google.com" /> -->

        <!-- Access to all the subdomains on google.com -->
        <!-- <access origin="http://*.google.com" /> -->

        <!-- Enable requests to content: URLs -->
        <access origin="content:///*" />

        <!-- Don't block any requests -->
        <access origin="*" />

    <!-- =========================================== -->

    
    <!-- <icon src="icon.png" /> -->
    <plugin name="cordova-plugin-whitelist" />

</widget>


